   <script>
       function toggleAnswer() {
           const answerContent = document.getElementById('answerContent');
           const analysisContent = document.getElementById('analysisContent');
           const button = event.target;

           if (answerContent.classList.contains('hidden-content')) {
               answerContent.classList.remove('hidden-content');
               analysisContent.classList.remove('hidden-content');
               button.textContent = '隐藏答案和解析';
           } else {
               answerContent.classList.add('hidden-content');
               analysisContent.classList.add('hidden-content');
               button.textContent = '显示答案和解析';
           }
       }

       // 打印数据
       window.addEventListener('DOMContentLoaded', function() {
           const questionData = {
               序号: {{ question.序号 }},
               题干: {{ question.题干 }},
               选项A: {{ question['选项 A'] }},
               选项B: {{ question['选项 B'] }},
               选项C: {{ question['选项 C'] }},
               选项D: {{ question['选项 D'] }},
               选项E: {{ question['选项 E'] }},
               选项F: {{ question['选项 F'] }},
               选项G: {{ question['选项 G'] }},
               选项H: {{ question['选项 H'] }},
               答案: {{ question.答案 }},
               解析: {{ question.解析 or '无' }},
               标签: {{ question.标签 }}
           };

           console.log('Question Data:', questionData);

           // 可选：将数据展示在页面上
           const debugInfo = document.getElementById('debug-info');
           debugInfo.innerHTML = '<pre>' + JSON.stringify(questionData, null, 2) + '</pre>';
       });
   </script>

</body>
